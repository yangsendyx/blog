
{{#section 'link'}}
<style type="text/css">
	.modal-body { text-align: center;}
	#modal-img{ vertical-align: top; margin: 10px auto; box-shadow: 0 0 10px #555;}
	.desc{ display: inline-block; max-width: 150px;white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}
</style>
{{/section}}

{{> nav}}

<div class="container">
	<div class="row">
		<h3 class="alert alert-info" role="alert">DEMO 列表</h3>
	</div>
</div>

<div class="container">
	<div class="row">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>标题</th>
					<th>描述</th>
					<th>高度</th>
					<th>时间</th>
					<th>预览</th>
					<th>查看</th>
					<th>删除</th>
				</tr>
			</thead>
			<tbody id="tbody">
				{{#each demos}}
				<tr>
					<td>{{title}}</td>
					<td><span class="desc" title="{{desc}}">{{desc}}</span></td>
					<td>{{height}}</td>
					<td>{{meta.time}}</td>
					<td>
						<button class="btn btn-primary dialogImg" data-path="{{path}}photo.jpg"
						data-title="{{title}}">预览</button>
					</td>
					<td>
						<a href="{{path}}" target="_blank" class="btn btn-info">查看</a>
					</td>
					<td>
						<button class="btn btn-danger del" data-id="{{_id}}">删除</button>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>

<div class="container">
	<div class="row">
		<div>{{current}} / {{allPage}}</div>
		<ul class="pagination" id="pagination" data-all="{{allPage}}" data-cur="{{current}}"></ul>
	</div>
</div>

<div class="modal fade" id="modalBox">
    <div class="modal-dialog">
        <div class="modal-content">
        	<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h3 class="modal-title" id="modal-title"></h3>
			</div>
			<div class="modal-body">
				<img src="" id="modal-img">
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>
			</div>
		</div>
	</div>
</div>

{{#section 'script'}}
<script type="text/javascript" src="/js/admin/demoList.js"></script>
{{/section}}